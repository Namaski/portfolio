{% extends 'base.html.twig' %}

{% block title %}Portfolio | Nassim BERABHA{% endblock %}

{% block body %}
<!-- NAVBAR -->
<header class="flex justify-between items-center px-6 py-4">
    <h1 class="text-xl font-bold">Nassim</h1>
    <nav>
        <ul class="flex space-x-4">
            <li><a href="#home" class="hover:text-purple-400">#home</a></li>
            <li><a href="#works" class="hover:text-purple-400">#works</a></li>
            <li><a href="#about-me" class="hover:text-purple-400">#about-me</a></li>
            <li><a href="#contacts" class="hover:text-purple-400">#contacts</a></li>
            <li><a href="#" class="hover:text-purple-400">EN</a></li>
        </ul>
    </nav>
</header>

<!-- MAIN -->
<main class="flex flex-col items-center justify-center h-screen text-center">
    <!-- INTRO -->
    <div class="mb-8">
        <h2 class="text-4xl font-bold text-gray-200">
            Nassim is a <span class="text-purple-500">web designer</span> and <span class="text-purple-500">front-end
                developer</span>
        </h2>
        <p class="text-gray-400 mt-2">He crafts responsive websites where technologies meet creativity</p>
        <button class="mt-6 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-gray-200 rounded">
            Contact me !!
        </button>
    </div>

    <!-- IMAGE -->
    <div class="relative">
        <img src="https://via.placeholder.com/200" alt="Image de profil" class="rounded-full">
        <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 px-2 py-1 bg-purple-600 text-sm rounded">
            Currently working on Portfolio
        </div>
    </div>

    <!-- QUOTE -->
    <blockquote class="mt-12 text-lg border-l-4 border-purple-600 pl-4">
        <p>"I don’t always test my code, but when I do, I do it in production."</p>
        <footer class="mt-2 text-sm text-gray-400">— An anonymous coder</footer>
    </blockquote>
</main>
{% endblock body %}